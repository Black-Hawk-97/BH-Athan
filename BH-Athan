notify-send "BH-Athan" "حان الان موعد اذان الضهر حسب التوقيت المحلي لمدينة البصرة وضواحيها" -t 10000 -i "/tmp/BH-Athan/BH-Icon.png"
cd /tmp/BH-Athan
mplayer duhur.mp3
mplayer adhan11.wma
fi
if [ $time == "17:21:00" ]; then
notify-send "BH-Athan" "حان الان موعد اذان المغرب حسب التوقيت المحلي لمدينة البصرة وضواحيها" -t 10000 -i "/tmp/BH-Athan/BH-Icon.png"
