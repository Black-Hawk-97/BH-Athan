fi
;;
"Al Muthana")
if [ $time == "05:00:00" ]; then
cd /tmp/BH-Athan
notify-send "BH-Athan" "حان الان موعد اذان الفجر حسب التوقيت المحلي لمدينة المثنى وضواحيها" -t 10000 -i "/tmp/BH-Athan/BH-Icon.png"
mplayer fajer.mp3
mplayer adhan11.wma
fi
if [ $time == "11:47:00" ]; then
notify-send "BH-Athan" "حان الان موعد اذان الضهر حسب التوقيت المحلي لمدينة المثنى وضواحيها" -t 10000 -i "/tmp/BH-Athan/BH-Icon.png"
cd /tmp/BH-Athan
