mplayer adhan11.wma
fi
if [ $time == "17:21:00" ]; then
notify-send "BH-Athan" "حان الان موعد اذان المغرب حسب التوقيت المحلي لمدينة المثنى وضواحيها" -t 10000 -i "/tmp/BH-Athan/BH-Icon.png"
cd /tmp/BH-Athan
